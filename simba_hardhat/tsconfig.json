{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "rootDirs": ["./src", "./test"],
    "esModuleInterop": true,
    "strictPropertyInitialization": false,
    "typeRoots": ["node_modules/@types"],
    "allowJs": true
  },
  "exclude": ["dist", "node_modules"],
  "include": [
    "./test",
    "./src"
  ]
}
