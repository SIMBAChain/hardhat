{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "rootDirs": ["./src", "./test"],
    "esModuleInterop": true,
    "strictPropertyInitialization": false,
    "typeRoots": ["node_modules/@types"],
    "allowJs": true
  },
  "exclude": [
    "./dist",
    "./node_modules",
    "tests"
  ],
  "include": [
    "./test",
    "./src"
  , "tests"  ]
}
